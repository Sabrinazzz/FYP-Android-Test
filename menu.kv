        GridLayout: 
            cols: 3
            size_hint: None, None
            size: root.width, root.height*0.2
            padding: 100,20

            Label:
            Label:
            

            Button: 
                text: "Back"
                on_press: 
                    root.manager.transition.direction = 'right'
                    app.root.current = "mainMenuScreen"

