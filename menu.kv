#:kivy 2.0


DisplayScreenManager:
    MainMenuScreen:
    SettingsScreen:
    SurveyScreen:
    AltSurveyScreen:
    FeedbackScreen:
    InformationScreen:
    OnboardSurveyScreen:

<MyPopUp>
    auto_dismiss: False
    id: popup_window
    Label: 
        id: popup_label
        text: "It's time to take the survey!"
    Button: 
        id: popup_button
        text: "To survey!"
        size_hint: 0.5, 0.2
        pos_hint: {"x": 0.0, "y": 0.1}
        on_press: 
            app.toSurvey('https://cacsss.eu.qualtrics.com/jfe/form/SV_8oDU80kby5218HA','https://cacsss.eu.qualtrics.com/jfe/form/SV_cuueTvjOklbQy0K')
            app.surveyTaken()
            app.close_notification_popup()
    Button:
        id: cancel_button
        text: "Snooze"
        size_hint: 0.5, 0.2
        pos_hint: {"x": 0.5, "y": 0.1}
        on_press:
            #app.snooze() 
            app.close_notification_popup()
            app.show_snooze_popup()

<SnoozePopUp>
    id: snooze_popup
    Label: 
        id: snooze_label
        text: "Snoozed for 5 minutes."
    Button: 
        id: popup_button
        text: "OK"
        size_hint: 0.5, 0.2
        pos_hint: {"x": 0.4, "y": 0.1}
        on_press: 
            app.close_snooze_popup()
    
    

<MainMenuScreen>:
    name: "mainMenuScreen"
    background_color: 0, 0, 0, 1
    #clock_var: clock
    

    FloatLayout:

        GridLayout: 
            rows: 4


            GridLayout: 
                cols: 1
                size_hint: None, None
                size: root.width, root.height*0.2
                padding: 100, 10

                Label:
                    text: "Bugs Beeps and Blips"
                    
            
            GridLayout:
                rows: 3
                size_hint: None, None
                size: root.width, root.height*0.25
                background_normal: ""
                padding: 100, 10
                

                Button:
                    text: "Survey"
                    background_color: .12, .84, 1, 1
                    on_press: 
                        root.manager.transition.direction = 'left'
                        app.root.current = 'altSurveyScreen'

            GridLayout: 
                rows: 1
                size_hint: None, None
                size: root.width, root.height*0.25
                background_normal: ""
                padding: 100, 10

                Button: 
                    text: "Study Information"
                    background_color: .12, .84, 1, 1
                    on_press: 
                        root.manager.transition.direction = 'left'
                        app.root.current = 'informationScreen'

            GridLayout:
                cols: 4
                size_hint: None, None
                size: root.width, root.height*0.3
                padding: 100, 20

                Button: 
                    text: "Initial Survey"
                    background_color: .12, .84, 1, 1
                    on_press: 
                        root.manager.transition.direction = 'left'
                        app.root.current = 'onboardSurveyScreen'

                Button: 
                    text: "Settings"
                    background_color: .12, .84, 1, 1
                    on_press: 
                        root.manager.transition.direction = 'left'
                        app.root.current = 'settingsScreen'

                Button: 
                    text: "Test me"
                    background_color: .12, .84, 1, 1
                    on_press: 
                        # app.notify("Hello World!","It's Survey Time",True)
                        app.show_notification_popup("Hello!", "It's time to take the survey!")

                Button: 
                    text: "No Toast"
                    background_color: .12, .84, 1, 1
                   # on_press: app.notify("Hello World!","no Toast this time",False)




                    

<SettingsScreen>:
    name: "settingsScreen"
    earliest_var : Earliest
    latest_var : Latest

    FloatLayout: 

        GridLayout: 
            rows: 4
    
            GridLayout: 
                cols: 1
                size_hint: None, None
                size: root.width, root.height*0.2

                Label: 
                    text: "Please enter the earliest and \nlatest times you would like to\nreceive Surveys in a 24 hour format"
                Label: 
                    text: "Currently Selected Range: "
                
            GridLayout:
                cols: 2
                size_hint: None, None
                size: root.width, root.height*0.5
                padding: 20, 20

                Label: 
                    text: "New\nEarliest Time: "
                    color: .12, .84, 1,1
                TextInput: 
                    id : Earliest
                    mutliline: False
                Label: 
                    text: "New\nLatest Time: "
                    color: .12, .84, 1,1
                TextInput: 
                    id: Latest
                    mutliline : False

                Label: 
                    text: "Current\nEarliest Time: "
            

                Label: 
                    text: str(app.earliest_survey_time)
                    #text: "Time"
                    id: earliest_label
                
                Label: 
                    text: "Current\nLatest Time: "

                Label: 
                    text: str(app.latest_survey_time)
                    #text: "Time"
                    id: latest_label

            GridLayout: 
                cols: 2
                size_hint: None, None, 
                size: root.width, root.height *0.1
                padding: 20, 0

                Button: 
                    text: "Submit"
                    on_press: 
                        app.submitButton(Earliest, Latest)
                        root.submitUpdate(Earliest, Latest)
                      #  app.setTargetTime(app.time_list) # LAURA: added to submitButton() method instead
                    background_color: .12, .84, 1,1

        


            GridLayout: 
                cols: 3
                size_hint: None, None
                size: root.width, root.height*0.2
                padding: 20, 20
                Label: 
                Label:
                 

                Button: 
                    text: "Back"
                    on_press: 
                        root.manager.transition.direction = 'right'
                        app.root.current = "mainMenuScreen"
   
<SurveyScreen>:
    name: "surveyScreen"

    FloatLayout:

        GridLayout: 
            rows: 3

            GridLayout: 
                cols: 1
                size_hint: None, None
                size: root.width , root.height*0.2
                padding: 100,50

                Label: 
                    text: "Bugs Beeps and Blips"
        
            GridLayout:

                cols: 2
                size_hint: None, None
                size: root.width, root.height*0.6
                padding: 100,50

                Button:
                    text: "Survey 1"
                    on_press: app.toSurvey()
                    background_color: .12, .84, 1,1
                    
                
                Button:
                    text: "Survey 2"
                    on_press: app.toSurvey()
                    background_color: .12, .84, 1,1

                Button:
                    text: "Survey 3"
                    on_press: app.toSurvey()
                    background_color: .12, .84, 1,1

                Button:
                    text: "Survey 4"
                    on_press: app.toSurvey()
                    background_color: .12, .84, 1,1

                Button:
                    text: "Survey 5"
                    on_press: app.toSurvey()
                    background_color: .12, .84, 1,1

                Button:
                    text: "Survey 6"
                    on_press: app.toSurvey()
                    background_color: .12, .84, 1,1


            GridLayout: 
                cols: 5
                size_hint: None, None
                size: root.width, root.height* 0.2
                padding: 100,20

                Label:
                Label:
                Label:
                Label:
                
                Button: 
                    text: "Back"
                    on_press: 
                        root.manager.transition.direction = 'right'
                        app.root.current = "mainMenuScreen"

<AltSurveyScreen>
    name: "altSurveyScreen"

    FloatLayout:

        GridLayout: 
            rows: 4

            GridLayout: 
                cols: 2
                size_hint: None, None
                size: root.width , root.height*0.2
                padding: 100,0

                Label: 
                    text:"Surveys Completed: "
                    

                Label: 
                    text: "0"
                    id: surveys_completed

                Label: 
                    text: "Surveys left: "
                    

                Label: 
                    text: "6"
                    id: surveys_left
        
            GridLayout:

                rows: 1
                size_hint: None, None
                size: root.width, root.height*0.4
                padding: 100,50

                Button:
                    text: "Start the Survey"
                    on_press: 
                        app.toSurvey('https://cacsss.eu.qualtrics.com/jfe/form/SV_8oDU80kby5218HA','https://cacsss.eu.qualtrics.com/jfe/form/SV_cuueTvjOklbQy0K')
                        app.surveyTaken()
                    background_color: .12, .84, 1,1
            
            GridLayout: 
                cols: 1
                size_hint: None, None
                size: root.width, root.height*0.2
                padding: 200, 10
    

                Button:
                    text: "Snooze"
                    background_color: .12, .84, 1,1
                    
                    on_press: 
                        app.snooze()
                        app.show_snooze_popup()
                    #    app.notify("Survey Snoozed","You will be notified again in 5 minutes", True)
                      #  app.schedulenotify(5)
                    #on_press: app.notify("Hello World!", "It's Survey Time", True)
                    #on_press: app.feedbacknotification("Survey Snoozed", True)

            


            GridLayout: 
                cols: 3
                size_hint: None, None
                size: root.width, root.height* 0.2
                padding: 100,20

                Label:
                Label:
                
                
                Button: 
                    text: "Back"
                    on_press: 
                        root.manager.transition.direction = 'right'
                        app.root.current = "mainMenuScreen"

<FeedbackScreen>
    name: "feedbackScreen"

    GridLayout: 
        rows: 2

        Label: 
            text: "Under Construction"

        Button: 
            text: "Back"
            on_press: 
                root.manager.transition.direction = 'right'
                app.root.current = "mainMenuScreen"

